               <persName xml:lang="gez" corresp="#n1" type="normalized">Zawditu</persName>
             
                  <persName xml:lang="gez" xml:id="n2" type="baptismal">አስካለ፡ ማርያም፡</persName>
               <persName xml:lang="gez" corresp="#n2" type="normalized">ʾAskāla Māryām</persName>
                  <persName>
                     
                     <roleName type="title">nǝgǝśta nagaśtāt</roleName>
