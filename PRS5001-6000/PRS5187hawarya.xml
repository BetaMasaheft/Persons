               <persName xml:lang="gez" xml:id="n2" type="birth">ሐዋርያ፡ ክሶስ፡</persName>
               <persName xml:lang="gez" corresp="#n2" type="normalized">Ḥawāryā Kǝsos</persName>
               <persName>
                  <roleName type="title">ṣaḥāfe tǝʾǝzāz</roleName>
               </persName>
               
               <occupation type="literary">royal chronicler</occupation>
               <nationality type="Ethiopia"/>
               <faith type="EOTC"/>
             
               <residence>
                  <placeName ref="LOC3577Gondar">Gondar</placeName>
