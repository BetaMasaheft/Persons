         <listPerson>
            <person sex="1">
               <persName xml:lang="gez" xml:id="n1" type="monastic">ገብረ፡ መሢሕ፡</persName>
               <persName xml:lang="gez" corresp="#n1" type="normalized">Gabra Maśiḥ</persName>
               <persName>
                  <roleName type="title">ʾabbā</roleName>
               </persName>
                  <nationality type="Ethiopia"/>
                  <faith type="EOTC"/>
                  <occupation type="ecclesiastic">abbot</occupation>

               <birth when="1419"> He was born at <placeName ref="LOC6569Tegray">Tǝgrāy</placeName> in <date>1419</date>.</birth>
                  <residence>
                  <placeName ref="LOC3653GundaG">Gunda Gunde</placeName>
               </residence>
               <floruit notBefore="1476" notAfter="1522">He was  the disciple of 
                 
                  <persName ref="PRS1008Abakaraz"> <roleName type="title">ʾabbā</roleName>  ʾAbakarazun</persName>, the leader of <persName ref="PRS11211Stephanites">Stephanites</persName>, who he succeeded 
                  
                  as the head of the monastery of <placeName ref="LOC3653GundaG">Gunda Gunde</placeName>
                  in <date>1476</date>. He held this position during 
                  the reign of King <persName ref="PRS3874eskender">ʾƎskǝndǝr</persName>, King <persName ref="PRS7481NaodA">Nāʿod</persName>, 
                  King <persName ref="PRS6229LebnaDe">Lǝbna Dǝngǝl</persName> and the metropolitans <persName ref="PRS10350Yeshaq">Yǝsḥaq (II)</persName> and 
                  <persName ref="PRS6774Marqos">Mārqos [I]</persName>. 
                  He was succeeded by  
                  <persName ref="PRS4943Habtase"><roleName type="title">ʾabbā </roleName> Habta Śǝllāse</persName>.
                     </floruit>
                  <death when="1522"> He died in <date>1522</date>.</death>
               </person>  
